@using PixelCritic.WebApp.Dtos
@{
    ViewData["Title"] = "Home Page";
}
@model IEnumerable<ArticleDto>

<section class="heroHeader">
    <div class="slidesContainer">
        <div class="slidesItem">
            <img class="slideImg" src="Images/warrior-7631678_1280.jpg" alt="" />
        </div>
        <div class="slidesItem">
            <img class="slideImg" src="Images/ai-generated-8941651_1280.jpg" alt="" />
        </div>
        <div class="slidesItem">
            <img class="slideImg" src="Images/header.png" alt="" />
        </div>
        <div class="slidesItem">
            <img class="slideImg" src="/Images/Leonardo_Phoenix_I_envision_a_dark_fantasy_scene_inspired_by_M_1.jpg" alt="" />
        </div>
    </div>
    <button class="prev" onclick="prevSlide()"><i class="fa-solid fa-angle-left"></i></button>
    <button class="next" onclick="nextSlide()"><i class="fa-solid fa-angle-right"></i></button>
</section>
<main>

    <!--Plattform---------------------------------------------------------->
    <h1>Plattform</h1>

    <section class="categoryHolder">
        <div class="plattformContainer">
            <a href="@Url.Action("Category", "Game", new { category = "Xbox" })">
               
                <div class="plattformCard">
                    <img src="Images/xboxneon.png" alt="Xbox games" />
                </div>
            </a>
            <a href="@Url.Action("Category", "Game", new { category = "Playstation" })">
                <div class="plattformCard">
                    <img src="Images/playstationneon.png" alt="Playstation games" />
                </div>
            </a>
            <a href="@Url.Action("Category", "Game", new { category = "PC (Windows)" })">
                <div class="plattformCard">
                    <img src="~/Images/pcneon.png" alt="PC games" />
                </div>
            </a>
            <a href="@Url.Action("Category", "Game", new { category = "Web Browser" })">
                <div class="plattformCard">
                    <img src="~/Images/webBrowser.png" alt="Web browser games" />
                </div>
            </a>
        </div>
    </section>

    <!--Most populare game-------------------------------------------------->
    <div class="buttonContainer">
        <h1>Most Relevant game</h1>
        <div class="move-me-right">
            <button id="cardNextPop" class="cardNext">
                <i class="fa-solid fa-arrow-right"></i>
            </button>
            <button id="cardPrevPop" class="cardPrev">
                <i class="fa-solid fa-arrow-left"></i>
            </button>
        </div>
    </div>

    <section id="card-pop" class="cardHolder">
        <div id="cardslider1" class="cardslider">
        </div>
    </section>

    <!--Newest game----------------------------------------------------------------->


    <div class="buttonContainer">
        <h1>Newest game</h1>
        <div class="move-me-right">
            <button class="cardNext">
                <i class="fa-solid fa-arrow-right"></i>
            </button>
            <button class="cardPrev">
                <i class="fa-solid fa-arrow-left"></i>
            </button>
        </div>
    </div>

    <section class="cardHolder">
        <div class="cardslider">
        </div>
    </section>

    <!--Latest news---------------------------------------------------------->

    <div class="buttonContainer">
        <h1>Latest news</h1>
        <div class="move-me-right">
            <button class="cardNext">
                <i class="fa-solid fa-arrow-right"></i>
            </button>
            <button class="cardPrev">
                <i class="fa-solid fa-arrow-left"></i>
            </button>
        </div>    
    </div>

    <section class="cardHolder">
        <div class="cardslider">


            @if (Model.Count() == 0)
            {
                <h2>Nothing new in the world of games...</h2>
            }
            @foreach (var news in Model.OrderByDescending(article => article.Date))
            {
                <a href="@Url.Action("ArticleDetails", "News", new { id = news.Id })">
                    <div class="newsCard">
                        <div class="newsCardImageContainer">
                            <img src="@news.ImageUrl" alt="" />
                        </div>
                        <div class="newsTitle">
                            <h2>@news.Title</h2>
                        </div>
                        <p class="newsContent">
                            @news.Description
                        </p>
                    </div>
                </a>

            }
        </div>
    </section>
    <script src="~/js/HeaderSlider.js"></script>
    <script src="~/js/Slider.js"></script>
    <script src="~/js/PopulateGame.js"></script>
</main>
